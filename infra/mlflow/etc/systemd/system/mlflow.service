[Unit]
Description=MLflow Tracking Server
After=network.target

[Service]
Type=simple
User=ldstn
Group=ldstn
WorkingDirectory=/encrypted/sandbox/main/Solenoid/mlflow
Environment="MLFLOW_SERVER_ALLOWED_HOSTS=*"
ExecStart=/encrypted/sandbox/main/Solenoid/.venv/bin/mlflow server \
    --backend-store-uri sqlite:////encrypted/sandbox/main/Solenoid/mlflow/mlflow.db \
    --default-artifact-root /encrypted/sandbox/main/Solenoid/mlflow/artifacts \
    --host 0.0.0.0 \
    --port 5000
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target